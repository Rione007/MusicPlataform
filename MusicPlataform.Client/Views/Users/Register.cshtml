@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
        }

        .register-page {
            display: flex;
            height: 100vh;
        }

        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #FF4E50, #F9D423);
            color: white;
            padding: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .left-panel h1 {
                font-size: 36px;
                font-weight: bold;
            }

        .right-panel {
            flex: 1;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
        }

        .register-box {
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            background-color: #f0f0f5;
            border: none;
            border-radius: 30px;
            padding-left: 40px;
        }

        .form-group {
            position: relative;
        }

            .form-group i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
            }

        .btn-gradient {
            background: linear-gradient(to right, #FF512F, #DD2476);
            border: none;
            border-radius: 30px;
            color: white;
            font-weight: bold;
            width: 100%;
            padding: 10px;
        }

            .btn-gradient:hover {
                background: linear-gradient(to right, #DD2476, #FF512F);
            }

        .text-small {
            font-size: 13px;
            color: #555;
        }

        .text-center a {
            color: #FF512F;
            text-decoration: none;
        }

            .text-center a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="register-page">
        <!-- Left Panel -->
        <div class="left-panel">
            <h1>¡Únete a nosotros!</h1>
            <p>Crea una cuenta para comenzar a disfrutar de todas las funcionalidades de nuestra plataforma.</p>
        </div>

        <!-- Right Panel -->
        <div class="right-panel">
            <div class="register-box">
                <h5 class="text-center mb-4 text-uppercase text-primary">Registro</h5>

                <form asp-action="Register" method="post">
                    <div class="mb-3 form-group">
                        <i class="bi bi-person-fill"></i>
                        <input asp-for="Username" class="form-control" placeholder="Nombre de usuario" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <i class="bi bi-envelope-fill"></i>
                        <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <i class="bi bi-lock-fill"></i>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-gradient">Registrar</button>
                </form>

                <p class="text-center mt-3 text-small">
                    ¿Ya tienes una cuenta? <a asp-controller="Users" asp-action="Login">Inicia sesión aquí</a>
                </p>
            </div>
        </div>
    </div>

</body>
</html>
