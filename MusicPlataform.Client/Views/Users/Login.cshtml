@model LoginViewModel
@{
    Layout = null;
}

<!-- Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Íconos Bootstrap (para los íconos en los inputs) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-page {
        display: flex;
        height: 100vh;
    }

    .left-panel {
        flex: 1;
        background: linear-gradient(135deg, #7F00FF, #E100FF);
        color: white;
        padding: 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .left-panel h1 {
            font-size: 36px;
            font-weight: bold;
        }

    .right-panel {
        flex: 1;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px;
    }

    .login-box {
        width: 100%;
        max-width: 360px;
    }

    .form-control {
        background-color: #f0f0f5;
        border: none;
        border-radius: 30px;
        padding-left: 40px;
    }

    .form-group {
        position: relative;
    }

        .form-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
        }

    .btn-gradient {
        background: linear-gradient(to right, #FF512F, #DD2476);
        border: none;
        border-radius: 30px;
        color: white;
        font-weight: bold;
        width: 100%;
        padding: 10px;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #DD2476, #FF512F);
        }

    .form-check-label, .small-text {
        font-size: 13px;
        color: #555;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

<div class="login-page">
    <!-- Left Panel -->
    <div class="left-panel">
        <h1>Welcome to website</h1>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
    </div>

    <!-- Right Panel -->
    <div class="right-panel">
        <div class="login-box">
            <h5 class="text-center mb-4 text-uppercase text-primary">User Login</h5>

            <form asp-action="Login" method="post">
                <div class="mb-3 form-group">
                    <i class="bi bi-person-fill"></i>
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-3 form-group">
                    <i class="bi bi-lock-fill"></i>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3 form-actions">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="remember" />
                        <label class="form-check-label" for="remember">Remember</label>
                    </div>
                    <a href="#" class="small-text">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-gradient">LOGIN</button>
            </form>
            <p class="text-center mt-3 text-small">
                ¿Ya tienes una cuenta? <a asp-controller="Users" asp-action="Register">Registrate Aqui</a>
            </p>
        </div>
    </div>
</div>
