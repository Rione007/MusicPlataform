<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MusicPlataform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/siteNew.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Left -->
            <a class="navbar-brand" asp-controller="ArTrack" asp-action="Index">🏠 MusicPlataform</a>
            <form class="d-flex ms-3 mb-4">
                <input id="search-input" class="form-control me-2" type="search" placeholder="Buscar artistas o canciones" aria-label="Buscar">
            </form>


            <!-- Right -->
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Premium</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ayuda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Descargar</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Dropdown con usuario logueado -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Profile"><i class="bi bi-person"></i> Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Users" asp-action="Login">Iniciar sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-success ms-2" asp-controller="Users" asp-action="Register">Registrarse</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor principal -->
    <div class="main-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">

            <hr class="text-secondary my-2" />
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Tus listas</h5>
                <button id="btn-create-playlist" class="btn btn-sm btn-outline-light ms-2">+ Crear lista</button>
            </div>
            <ul id="playlists-list" class="nav flex-column">
                <li class="nav-item text-muted"><span class="nav-link">Cargando...</span></li>
            </ul>

        </div>

        <!-- Contenido dinámico -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer id="audio-footer" class="bg-dark text-white p-3 fixed-bottom d-none">
        <div class="d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center" style="min-width: 250px; max-width: 250px;">
                <img id="footer-img" src="" alt="" style="width:50px; height:50px; object-fit:cover; margin-right:10px;" />
                <div>
                    <div id="footer-title" class="text-truncate" style="max-width: 180px;">Título largo que se corta...</div>
                    <div id="footer-artist" class="text-truncate" style="max-width: 180px;">Artista muy largo...</div>
                </div>
            </div>

            <div class="d-flex flex-column align-items-center justify-content-center flex-grow-1">
                <div class="d-flex align-items-center mb-2">
                    <span id="current-time" class="me-2">0:00</span>
                    <input type="range" class="form-range me-2" id="progress-bar" value="0" min="0" max="100" step="0.1" onchange="seekAudio(event)" style="width:300px;">
                    <span id="total-duration">0:00</span>
                </div>

                <div class="d-flex align-items-center">
                    <button class="btn btn-light btn-sm me-2" id="footer-prev" onclick="playPreviousTrack()" disabled>
                        <i class="bi bi-skip-backward-fill"></i>
                    </button>
                    <button class="btn btn-light btn-sm me-2" id="footer-play" onclick="togglePlay()">
                        <i class="bi bi-play-fill"></i>
                    </button>
                    <button class="btn btn-light btn-sm" id="footer-next" onclick="playRandomTrack()">
                        <i class="bi bi-skip-forward-fill"></i>
                    </button>
                </div>

            </div>


            <div class="d-flex align-items-center">
                <i class="bi bi-volume-up-fill me-2"></i>
                <input type="range" class="form-range" id="volume-control" min="0" max="1" step="0.01" value="1" style="width:100px;">
            </div>
        </div>
        <audio id="footer-audio"></audio>
    </footer>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/layout.js"></script>
    <script src="~/js/add-to-playlist.js"></script> <!-- ✅ nuevo -->
    @RenderSection("Scripts", required: false)


</body>
</html>
