<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MusicPlataform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/siteNew.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <!-- Left -->
            <a class="navbar-brand" asp-controller="ArTrack" asp-action="Index">🏠 MusicPlataform</a>
            <form class="d-flex ms-3">
                <input class="form-control me-2" type="search" placeholder="¿Qué quieres reproducir?" aria-label="Buscar">
            </form>

            <!-- Right -->
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Premium</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ayuda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Descargar</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Dropdown con usuario logueado -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Profile"><i class="bi bi-person"></i> Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Users" asp-action="Login">Iniciar sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-success ms-2" asp-controller="Users" asp-action="Register">Registrarse</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor principal -->
    <div class="main-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <h5>Tu biblioteca</h5>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="#">Mi lista nº 1</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Mi lista nº 2</a></li>
            </ul>
        </div>

        <!-- Contenido dinámico -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer player -->
    <footer id="audio-footer" class="bg-dark text-white p-3 fixed-bottom d-none">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img id="footer-img" src="" alt="" style="width:50px; height:50px; object-fit:cover; margin-right:10px;" />
                <div>
                    <div id="footer-title">Título</div>
                    <div id="footer-artist">Artista</div>
                </div>
            </div>

            <div class="d-flex align-items-center">
                <button class="btn btn-light btn-sm me-2" id="footer-play" onclick="togglePlay()">
                    <i class="bi bi-play-fill"></i>
                </button>
                <span id="current-time" class="me-2">0:00</span>
                <input type="range" class="form-range me-2" id="progress-bar" value="0" min="0" max="100" step="0.1" onchange="seekAudio(event)" style="width:200px;">
                <span id="total-duration">0:00</span>
            </div>
        </div>
        <audio id="footer-audio"></audio>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
